<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        app:title="General"
        app:icon="@drawable/ic_switches">

        <EditTextPreference
            app:title="Last connected device"
            app:key="@string/bt_last_address"
            android:enabled="false"
            app:useSimpleSummaryProvider="true"/>

        <SwitchPreference
            android:key="@string/state_secure_connection"
            android:title="Secure connection"
            android:defaultValue="@bool/state_bluetooth_retry_default" />

        <SwitchPreference
            android:key="@string/state_bluetooth_retry"
            android:title="Bluetooth reconnect"
            android:defaultValue="@bool/state_bluetooth_retry_default" />

        <SwitchPreference
            android:key="@string/state_auto_update"
            android:title="Map auto update"
            android:defaultValue="@bool/state_auto_update_default" />

        <SwitchPreference
            android:key="@string/state_robot_simulation"
            android:title="Robot movement simulation"
            android:defaultValue="@bool/state_robot_simulation_default"
            app:isPreferenceVisible="false" />


        <SwitchPreference
            android:key="@string/state_use_accelerometer"
            android:title="Use accelerometer"
            android:defaultValue="@bool/state_use_accelerometer_default"
            app:isPreferenceVisible="false" />
    </PreferenceCategory>
    <PreferenceCategory
        app:title="Direction"
        app:icon="@drawable/ic_dir_all">

        <EditTextPreference
            app:title="Up"
            app:key="@string/cmd_up"
            app:defaultValue="@string/cmd_up_default"
            app:useSimpleSummaryProvider="true"/>
        <EditTextPreference
            app:title="Left"
            app:key="@string/cmd_left"
            app:defaultValue="@string/cmd_left__default"
            app:useSimpleSummaryProvider="true"/>
        <EditTextPreference
            app:title="Right"
            app:key="@string/cmd_right"
            app:defaultValue="@string/cmd_right_default"
            app:useSimpleSummaryProvider="true"/>
        <EditTextPreference
            app:title="Down"
            app:key="@string/cmd_down"
            app:defaultValue="@string/cmd_down_default"
            app:useSimpleSummaryProvider="true"/>
    </PreferenceCategory>

    <PreferenceCategory
        app:title="Actions"
        app:icon="@drawable/ic_code">

        <EditTextPreference
            app:title="Explore"
            app:key="@string/cmd_explore"
            app:defaultValue="@string/cmd_explore_default"
            app:useSimpleSummaryProvider="true"/>
        <EditTextPreference
        app:title="Fastest"
        app:key="@string/cmd_fastest"
        app:defaultValue="@string/cmd_fastest_default"
        app:useSimpleSummaryProvider="true"/>

        <EditTextPreference
            app:title="Image Recognition"
            app:key="@string/cmd_img_search"
            app:defaultValue="@string/cmd_img_search_default"
            app:useSimpleSummaryProvider="true"/>

        <EditTextPreference
            app:title="F1"
            app:key="@string/cmd_f1"
            app:defaultValue="@string/cmd_f1_default"
            app:useSimpleSummaryProvider="true"/>
        <EditTextPreference
            app:title="F2"
            app:key="@string/cmd_f2"
            app:defaultValue="@string/cmd_f2_default"
            app:useSimpleSummaryProvider="true"/>
        <EditTextPreference
            app:title="Stop"
            app:key="@string/cmd_stop"
            app:defaultValue="@string/cmd_stop_default"
            app:useSimpleSummaryProvider="true"/>
        <EditTextPreference
            app:title="Request Map Update"
            app:key="@string/cmd_req_map"
            app:defaultValue="@string/cmd_req_map_default"
            app:useSimpleSummaryProvider="true"/>
    </PreferenceCategory>

    <PreferenceCategory
        app:title="About"
        app:icon="@drawable/ic_info">

        <Preference
            android:key="info_version"
            android:selectable="false"
            android:persistent="false"
            android:title="Version"/>
        <Preference
            android:key="info_build"
            android:selectable="false"
            android:persistent="false"
            android:title="Build"/>

        <ListPreference
            android:key="@string/key_debug_map"
            android:title="Debug map data"
            android:dialogTitle="Debug map data"
            android:entries="@array/map_titles"
            android:entryValues="@array/map_values"
            app:useSimpleSummaryProvider="true"/>
    </PreferenceCategory>
</androidx.preference.PreferenceScreen>