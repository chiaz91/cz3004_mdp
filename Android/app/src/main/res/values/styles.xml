<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
    </style>

    <style name="MDPButtonBorderless" >
        <item name="android:textColor">@color/tint_selectable_color</item>
        <item name="android:tint">@color/tint_selectable_color</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="MDPButtonBorderless.Large" parent="@style/MDPButtonBorderless">
        <item name="android:minHeight">50dp</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="MDPButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/tint_selectable_color</item>
        <item name="android:drawableTint">@color/tint_selectable_color</item>
        <item name="android:padding">15dp</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="MDPButton.Radio" parent="MDPButton" >
        <item name="android:checked">false</item>
        <item name="android:button">@null</item>
    </style>

    <style name="MDPStatusCategory"  >
        <item name="android:minHeight">?listPreferredItemHeightSmall</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:drawableTint">@color/secondaryColor</item>
        <item name="android:drawablePadding">32dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MDPStatusValue"  >
        <item name="android:layout_marginStart">16dp</item>
<!--        <item name="android:textSize">15sp</item>-->
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>