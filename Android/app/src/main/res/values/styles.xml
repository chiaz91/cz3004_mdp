<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
    </style>

    <style name="MDPButtonBorderless" >
        <item name="android:textColor">@color/tint_selectable_color</item>
        <item name="android:tint">@color/tint_selectable_color</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="MDPButtonBorderless.Large" parent="@style/MDPButtonBorderless">
        <item name="android:minHeight">50dp</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
</resources>